@model CreateProjectDto
@{
    ViewData["Title"] = "CreateProject";
    Layout = "~/Views/Admin/Index.cshtml";
}

<div class="main-content-container overflow-hidden">
    <div class="d-flex justify-content-between align-items-center flex-wrap gap-2 mb-4 mt-1">
        <h3 class="mb-0">Yeni Proje Oluşturun</h3>

        <nav aria-label="breadcrumb">
            <ol class="breadcrumb align-items-center mb-0 lh-1">
                <li class="breadcrumb-item">
                    <a href="index.html" class="d-flex align-items-center text-decoration-none">
                        <i class="ri-home-8-line fs-15 text-primary me-1"></i>
                        <span class="text-body fs-14 hover">Dashboard</span>
                    </a>
                </li>
                <li class="breadcrumb-item active" aria-current="page">
                    <span>Projeler</span>
                </li>
                <li class="breadcrumb-item active" aria-current="page">
                    <span>Yeni Proje Ekle</span>
                </li>
                
            </ol>
        </nav>
    </div>

    <div class="card bg-white p-20 rounded-10 border border-white mb-4">
        <form method="post" id="createForm">
            <div class="row">
                <div class="col-lg-4">
                    <div class="mb-20">
                        <label class="label fs-16 mb-2">Proje Başlığı</label>
                        <div class="form-floating">
                            <input type="text" asp-for="Title" class="form-control" id="floatingInput1" placeholder="Proje Başlığı">
                            <label for="floatingInput1">*Başlık</label>
                        </div>
                    </div>
                </div>
                <div class="col-lg-4">
                    <div class="mb-20">
                        <label class="label fs-16 mb-2">Proje Resim Url</label>
                        <div class="form-floating">
                            <input type="text" asp-for="ImageUrl" class="form-control" id="floatingInput2" placeholder="Proje Resim Url">
                            <label for="floatingInput2">*Url</label>
                        </div>
                    </div>
                </div>
                <div class="col-lg-4">
                    <div class="mb-20">
                        <label class="label fs-16 mb-2">Kategori Seçiniz</label>
                        <div class="form-floating">
                            <select asp-for="CategoryId" asp-items="@ViewBag.categories" class="form-control" id="floatingInput3">
                             <option disabled selected>Kategori Seçiniz</option>
                                
                            </select>
                        </div>
                    </div>
                </div>
              
                <div class="col-lg-12">
                    <div class="col-lg-12">
                        <div class="form-group mb-20">
                            <label class="label fs-16">Proje Açıklaması</label>
                            <textarea asp-for="Subject" rows="4"  type="text" class="form-control" placeholder="*proje açıklaması"></textarea>
                        </div>
                    </div>
                </div>
          
                <div class="col-lg-12">
                    <span class="text-danger">@Html.ValidationSummary()</span>
                    <div class="d-flex gap-2">
                        <button type="button" onclick="createProject()"  class="btn btn-primary fw-normal text-white">Projeyi Oluştur</button>
                        <a href="/Admin/Project/Index"  class="btn btn-danger fw-normal text-white" >İptal Et</a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>


<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

<script>
    function createProject() {
        // 1. Önce formun geçerli olup olmadığını (boş alan var mı) kontrol et
        var form = document.getElementById("createForm");

        if (!form.checkValidity()) {
            // Eğer zorunlu alanlar boşsa, tarayıcının standart uyarısını göster
            form.reportValidity();
            return;
        }

        // 2. Form geçerliyse SweetAlert'i göster
        Swal.fire({
            title: 'Projeyi yayınlamak istiyor musunuz?',
            text: "Girdiğiniz bilgilerle yeni proje oluşturulacak.",
            icon: 'question',
            showCancelButton: true,
            confirmButtonColor: '#3085d6',
            cancelButtonColor: '#d33',
            confirmButtonText: 'Evet, Oluştur!',
            cancelButtonText: 'Vazgeç'
        }).then((result) => {
            if (result.isConfirmed) {
                // 3. Kullanıcı Evet derse, işlem başarılı mesajı verip formu gönder
                Swal.fire({
                    title: 'İşlem Başlatıldı!',
                    text: 'Proje oluşturuluyor, lütfen bekleyin...',
                    icon: 'success',
                    showConfirmButton: false, // Okey butonunu gizle
                    timer: 1500 // 1.5 saniye sonra formu gönder
                });

                // Kısa bir gecikme ile formu submit et (görsellik için)
                setTimeout(() => {
                    form.submit();
                }, 1000);
            }
        })
    }
</script>