@model List<ResultTestimonialDto>
@{
    ViewData["Title"] = "Referans Listesi";
    Layout = "~/Views/Admin/Index.cshtml";
    int count = 0;
}

<div class="container-fluid mt-4">
    <div class="card shadow mb-4">
        <div class="card-header py-3 d-flex justify-content-between align-items-center bg-primary text-white">
            <h6 class="m-0 font-weight-bold">Referanslar (Testimonials) Listesi</h6>
            <a href="/Admin/Testimonial/CreateTestimonial" class="btn btn-light btn-sm text-primary">
                <i class="fa fa-plus"></i> Yeni Ekle
            </a>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered table-hover align-middle" id="testimonialTable" width="100%" cellspacing="0">
                    <thead class="table-light">
                        <tr>
                            <th style="width: 5%">#</th>
                            <th style="width: 15%">Görsel</th>
                            <th style="width: 25%">Ad Soyad</th>
                            <th style="width: 20%">Meslek/Unvan</th>
                            <th style="width: 20%">Yorum</th>
                            <th style="width: 15%" class="text-center">İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            count++;
                            <tr>
                                <td>@count</td>
                                <td class="text-center">
                                    <img src="@item.ImageUrl" class="rounded-circle shadow-sm border"
                                         style="width: 60px; height: 60px; object-fit: cover;"
                                         alt="@item.Name" />
                                </td>
                                <td class="fw-bold">@item.Name</td>
                                <td><span class="badge bg-info text-dark">@item.Title</span></td>
                                <td>
                                    <small class="text-muted">
                                        @(item.Comment.Length > 50 ? item.Comment.Substring(0, 50) + "..." : item.Comment)
                                    </small>
                                </td>
                                <td class="text-center">
                                    <div class="btn-group" role="group">
                                        <a href="/Admin/Testimonial/UpdateTestimonial/@item.Id"
                                           class="btn btn-warning btn-sm"
                                           title="Düzenle">
                                            <i class="fa fa-pen">Güncelle</i>
                                        </a>
                                        <a href="/Admin/Testimonial/DeleteTestimonial/@item.Id"
                                           class="btn btn-danger btn-sm delete-btn"
                                           title="Sil">
                                            <i class="fa fa-trash">Sil</i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            @if (Model.Count == 0)
            {
                <div class="alert alert-warning text-center mt-3">
                    Henüz hiç referans eklenmemiş.
                </div>
            }
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script>
    document.addEventListener('DOMContentLoaded', function() {
        // Sınıf seçiciyi 'delete-btn' olarak güncelledim ki diğer kırmızı butonlarla karışmasın
        document.querySelectorAll('.delete-btn').forEach(btn => {
            btn.addEventListener('click', function(e) {
                e.preventDefault();
                const url = this.href;

                Swal.fire({
                    title: 'Silmek istediğinize emin misiniz?',
                    text: "Bu kayıt kalıcı olarak silinecektir!",
                    icon: 'warning',
                    showCancelButton: true,
                    confirmButtonColor: '#d33',
                    cancelButtonColor: '#3085d6',
                    confirmButtonText: 'Evet, Sil!',
                    cancelButtonText: 'Vazgeç'
                }).then((result) => {
                    if (result.isConfirmed) {
                        window.location.href = url;
                    }
                });
            });
        });
    });
</script>